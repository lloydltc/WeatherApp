<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrnd"
    tools:context=".View.Activity.MainActivity">

    <LinearLayout
        android:id="@+id/lin_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:typeface="sans"
            android:text="@string/app_name"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/twn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:text="@string/city"
            android:textStyle="bold|italic"/>


    </LinearLayout>

<LinearLayout
    android:id="@+id/lintop_weather"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="150dp"
    android:layout_below="@+id/lin_weather"
    android:background="#33B3E5FC"
    android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="23:47"
                />
            <TextView
                android:id="@+id/txtv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="16 November 2021"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/txt_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginLeft="15dp"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:textSize="28sp"
            android:text="21°C"
            />
        <LinearLayout
            android:id="@+id/linlayout_icon"
            android:layout_width="wrap_content"
            android:layout_gravity="start"
            android:layout_marginRight="8dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
          >

            <ImageView
                android:id="@+id/weather_icon"
                android:layout_width="42dp"
                android:layout_marginTop="-3dp"
                android:layout_height="42dp"
                android:src="@drawable/art_rain"/>
            <TextView
                android:id="@+id/txtv_weather"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-3dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Rainy"
                />
        </LinearLayout>


    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_below="@+id/lintop_weather"
        android:layout_height="2dp"
        android:background="@color/grey_700"
        />

    <LinearLayout
        android:id="@+id/lin_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/lintop_weather"
        android:background="#33B3E5FC"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtv_humidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Max 21° Min 15°"
                />
            <TextView
                android:id="@+id/txtv_precipitation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Max 21° Min 15°"
                />
            <TextView
                android:id="@+id/txtv_rainchance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Max 21° Min 15°"
                />
            <TextView
                android:id="@+id/txtv_cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Max 21° Min 15°"
                />
            <TextView
                android:id="@+id/txv_min_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Max 21° Min 15°"
                />
            <TextView
                android:id="@+id/txv_max_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Max 21° Min 15°"
                />


        </LinearLayout>
        <View
            android:layout_width="50dp"
            android:layout_height="110dp"
            android:background="@android:color/transparent"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <TextView
                android:id="@+id/txtv_wind_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Max 21° Min 15°"
                />
            <TextView
                android:id="@+id/txtv_wind_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Max 21° Min 15°"
                />
            <TextView
                android:id="@+id/txtv_preasure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Max 21° Min 15°"
                />
            <TextView
                android:id="@+id/txv_weather_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Max 21° Min 15°"
                />
            <TextView
                android:id="@+id/txtv_temp_condition"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="Max 21° Min 15°"
                />
            <TextView
                android:id="@+id/txtv_share"
                android:layout_width="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_height="wrap_content"
                android:textColor="@color/yellowtxt"
                android:textSize="16sp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="@string/share_weather"
                />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>