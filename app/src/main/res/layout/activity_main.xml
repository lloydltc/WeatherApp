<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cloudblueskyback"
    tools:context=".View.Activity.MainActivity">

    <LinearLayout
        android:id="@+id/today_weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/today_temp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:textColor="@color/white"
            android:textSize="80sp"
            android:text="21"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

                <ImageView
                    android:id="@+id/weather_icon"
                    android:layout_width="70dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_rain"/>

                <TextView
                    android:id="@+id/txtv_weather"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/weather_icon"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:textColor="@color/white"
                    android:textSize="30sp"
                    android:text="Rainy"
                   />
                <TextView
                    android:id="@+id/txtv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="50dp"
                    android:layout_below="@+id/weather_icon"
                    android:textSize="20sp"
                    android:text="21 November 2021"
                    android:textStyle="italic"/>
        </RelativeLayout>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/weather_forecast_rec"
        android:layout_width="match_parent"
        android:layout_below="@+id/today_weather"
        android:layout_height="wrap_content">
</androidx.recyclerview.widget.RecyclerView>


</RelativeLayout>