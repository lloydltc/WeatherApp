<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/forecast_card"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:background="#80FFFFFF"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="13dp">
        <LinearLayout
            android:id="@+id/forecast_weather"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/forecast_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:text="21"
                android:textStyle="bold"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/forecast_weather_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_rain"/>

                <TextView
                    android:id="@+id/forecast_txtv_weather"
                    android:layout_width="wrap_content"
                    android:layout_toRightOf="@+id/forecast_weather_icon"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="70dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:text="Rainy"
                    />
                <TextView
                    android:id="@+id/forecast_txtv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="50dp"
                    android:layout_below="@+id/forecast_weather_icon"
                    android:textSize="16sp"
                    android:text="21 November 2021"
                    android:textStyle="italic"/>
                <Button
                    android:id="@+id/btn_details"
                    android:layout_below="@id/forecast_txtv_date"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="det"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>